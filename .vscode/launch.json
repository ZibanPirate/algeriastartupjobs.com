{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug ./web",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/web"
    },
    {
      "name": "Debug ./api",
      "type": "lldb",
      "request": "attach",
      "program": "${workspaceFolder}/target/debug/dzjob-api",
      "windows": {
        // NOTE-ZM: haven't tested on Windows, use it with a big grain of salt
        "name": "Launch api (Windows)",
        "type": "cppvsdbg",
        "request": "launch",
        "program": "${workspaceFolder}/target/debug/dzjob-api.exe"
      }
    }
  ]
}
